{
  "manifest_version": 2,
  "name": "Birdbox",
  "description": "Maintain your favorite websites as spaces within Thunderbird",
  "version": "1.1.0",
  "author": "Philipp Kewisch",
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "birdbox@mozilla.kewis.ch",
      "strict_min_version": "115.0",
      "strict_max_version": "131.*"
    }
  },

  "icons": {
    "256": "images/addon.svg"
  },

  "background": {
    "page": "background/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["content/space.js"]
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["content/useragent.js"]
    }
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "contextualIdentities",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "experiment_apis": {
    "birdbox": {
      "schema": "experiment/birdbox.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiment/ext-birdbox.js",
        "events": ["startup"],
        "paths": [["birdbox"]]
      }
    }
  }
}
